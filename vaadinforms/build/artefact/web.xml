<?xml version="1.0" encoding="UTF-8"?>
<web-app
  id="WebApp_ID" version="2.4"
  xmlns="http://java.sun.com/xml/ns/j2ee" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
     http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <description>
     moware VaadinForms application APPLICATION_FQNAME
  </description>
  <display-name>APPLICATION_FQNAME</display-name>


  <context-param>
  	<param-name>productionMode</param-name>
  	<param-value>false</param-value>
  	<description>Vaadin production mode</description>
  </context-param>

  <context-param>
	<param-name>heartbeatInterval</param-name>
  	<param-value>60</param-value>
  </context-param>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <servlet>
    <servlet-name>loaderservlet</servlet-name>
    <servlet-class>
        org.modellwerkstatt.vaadinforms.windows.VFormsLoaderServlet
    </servlet-class>

    <init-param>
      <param-name>UI</param-name>
      <param-value>org.modellwerkstatt.vaadinforms.windows.VFormsApplicationUi</param-value>
    </init-param>

    <init-param>
      <param-name>closeIdleSessions</param-name>
      <param-value>true</param-value>
    </init-param>


	<init-param>
        <param-name>xmlConfigFile</param-name>
    	<param-value>APPLICATION_CONFIG</param-value>
    </init-param>
    
    <init-param>
        <param-name>applicationFqName</param-name>
    	<param-value>APPLICATION_FQNAME</param-value>
    </init-param>


  </servlet>

  <servlet-mapping>
    <servlet-name>loaderservlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
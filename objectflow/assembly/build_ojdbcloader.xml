<project name="OsigBatchJob" default="default">      

  <!-- **** app specific definitions **************************************************************** -->
  <property name="jobName"              value="OjdbcLoader" />
  <property name="jobVersion"           value="1.0.2" />
  <property name="jobSymbolicName"      value="org.modellwerkstatt.objectflow.tools.OJDBC6LoaderBundle" /> 
  <property name="jobBundleActivator"   value="org.modellwerkstatt.objectflow.tools.OJDBC6LoaderBundle" /> 
  <property name="exportPackageName"    value="org.modellwerkstatt.objectflow.tools" /> 
       
  <!-- **** solutions to incorporate in this build ************************************************** -->
  <property name="solultionSimpleGen"   value="/Users/danielstieger/moware/objectflow/solutions/sandbox/classes_gen" />
  <property name="mowarePluginHomeDir"   value="/Users/danielstieger/javaexe/MoPluginFake" />	
  <property name="felixDir"              value="/Users/danielstieger/stuff/felix-framework-5.6.8" />

  <target name="default" depends="clean">
    <mkdir dir="work"/>
    <mkdir dir="work/lib"/>
    <copy todir="work/lib">
	  
      <fileset dir="${mowarePluginHomeDir}/jars/richclient/" includes="ojdbc14.jar,log4j.jar,mailapi.jar,smtp.jar" /> 
      <fileset dir="${mowarePluginHomeDir}/jars/basis/" includes="commons-logging-1.2.jar" /> 
    
    </copy>
    
    
    
    <mkdir dir="work"/>
    <copy todir="work">
      <fileset dir="${solultionSimpleGen}/"> 
      		<include name="**/OJDBC6LoaderBundle.class"/>
      </fileset>
    </copy>
      
    <mkdir dir="dist"/>  
    <jar jarfile="dist/${jobName}-${jobVersion}.jar" basedir="work" update="false" >
      <manifest>
        <attribute name="Bundle-Name" value="${jobName}"/>
        <!-- create version from settings files of job? or from setting itself? -->
    	<attribute name="Bundle-Version" value="${jobVersion}"/>
    	<attribute name="Bundle-SymbolicName" value="${jobSymbolicName}" />
    	<attribute name="Bundle-Activator" value="${jobBundleActivator}" />
    	<attribute name="Bundle-ClassPath" value=".,lib/commons-logging-1.2.jar,lib/ojdbc14.jar,lib/log4j.jar,lib/mailapi.jar,lib/smtp.jar"/>
		<attribute name="Import-Package" value="javax.sql,javax.naming,org.osgi.framework" />
		<attribute name="Export-Package" value="${exportPackageName},oracle.jdbc,oracle.jdbc.pool,javax.mail,com.sun.mail.smtp,org.apache.log4j" />
		
      </manifest>
    </jar>
  </target>
  
  <target name="clean" description="Delete old work and dist directories">
	<delete dir="work"/>
	<delete dir="dist"/>	
  </target>
  
  <target name="deploy" depends="default">
  	<copy todir="${felixDir}/jobs">
  		<fileset dir="dist" />
  	</copy>
  </target>
    
</project>


    
